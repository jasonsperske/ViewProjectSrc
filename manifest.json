{
  "name": "View Project Source",
  "version": "0.0.2",
  "manifest_version": 2,
  "description": "Reads embeded meta tags that reveal a sites project structure, to help people learn how the web is made.",
  "homepage_url": "http://jason.sperske.com/",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "src/background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "icons/icon19.png",
    "default_title": "View Project Source",
    "default_popup": "src/project.html"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*"],
      "js": ["src/content.js"],
      "run_at": "document_start"
    }
  ],
  "permissions": [
    "http://*/*"
  ]
}
